<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="10.0dip"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
        <net.simonvt.numberpicker.NumberPicker android:id="@+id/frequencyValuePicker"
                                               android:layout_width="wrap_content"
                                               android:layout_height="wrap_content"
                                               android:layout_marginRight="8.0dip"/>
        <net.simonvt.numberpicker.NumberPicker android:id="@+id/frequencyTypePicker"
                                               android:layout_width="wrap_content"
                                               android:layout_height="wrap_content"
                                               android:layout_marginLeft="8.0dip"/>
    </LinearLayout>
    <CheckBox android:id="@+id/useGlobalFrequencyCheckBox"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8.0dip"
              android:text="@string/checker_add_check_frequency_use_global_checkbox"/>
</LinearLayout>